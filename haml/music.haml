!!! 5
%html{lang: "en"}
%head
    - require_relative 'music.rb'
    %meta{charset: "UTF-8"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}
    %title= $title[:projects]
    %link{rel:"stylesheet", href:"css/main.css"}
    %link{rel:"stylesheet", href:"https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=music_home,music_note,science"}
%body
    %nav
        %ul
            - $nav.each do |nav|
                %li
                    %a.material-symbols-rounded{href:"#{nav[:link]}.html"}= nav[:text]
                    -# = "|" unless nav == $nav.last
    .main-wrapper
        .scroll-bg.bg
            - $contents.each do |collection|
                .collection-box.box
                    .codename 
                        = collection[:collection]
                    - collection[:music].each do |content|
                        .post-box.box
                            %h2
                                = content[:title]
                            %audio{controls: "controls"}
                                %source{src: "#{content[:link]}", type: "#{content[:type]}"}
                            .description.box 
                                = content[:description]
                                .gray-out 
                                    = content[:comment] unless content[:comment].nil?
                                %h3= content[:date]